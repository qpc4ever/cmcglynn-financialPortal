@model cmcglynn_financialPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



        <!-- Main content-->
        <section>
            <div class="back-link">
                <a href="@Url.Action("Login", "Account")" class="btn btn-accent">Back to Login</a>
            </div>
            <div class="container-center lg animated slideInDown" style="margin: 5% auto 0">

                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-add-user"></i>
                    </div>
                    <div class="header-title">
                        <h3>Register</h3>
                        <small>
                            Please enter your data to register.
                        </small>
                    </div>
                </div>
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <p>
                        </p>
                        <form action="index.html" id="loginForm" novalidate>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label>First Name</label>
                                    <input name="FirstName" type="" class="form-control" />
                                    <span class="help-block small">Your First Name</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Last Name</label>
                                    <input name="LastName" type="" class="form-control" />
                                    <span class="help-block small">Your Last Name</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Password</label>
                                    <input type="password" value="" id="password" class="form-control" name="">
                                    <span class="help-block small">Your hard to guess password</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Repeat Password</label>
                                    <input type="password" value="" id="repeatpassword" class="form-control" name="">
                                    <span class="help-block small">Please repeat your password</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Profile Picture</label>
                                    <input name="image" type="file" class="form-control" />
                                    <span class="help-block small">Upload profile pic</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="username">Email</label>
                                    <input type="text" placeholder="example@gmail.com" title="Please enter you username" required="" value="" name="Email" id="username" class="form-control">
                                    <span class="help-block small">@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })Please enter your email address</span>
                                </div>
                            </div>
                            <div>
                                <input type="submit" class="btn btn-default" value="Register" />
                                <!--<button class="btn btn-accent">Register</button>-->
                                <!--<a class="btn btn-default" href="login.html">Login</a>-->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
