@model cmcglynn_financialPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



        <!-- Main content-->
        <section>
            <div class="back-link">
                <a href="@Url.Action("Login", "Account")" class="btn btn-accent">Back to Login</a>
            </div>
            <div class="container-center lg animated slideInDown" style="margin: 5% auto 0">

                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-add-user"></i>
                    </div>
                    <div class="header-title">
                        <h3>Register</h3>
                        <small>
                            Please enter your data to register.
                        </small>
                    </div>
                </div>
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <p>
                        </p>
                       @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "loginForm", role = "form" }))
                       {
                        @Html.AntiForgeryToken()
                           if (Model.HouseHoldId != null)
                           {
                            <input name="HouseHoldId" value="@Model.HouseHoldId" hidden />
                           }
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="FirstName">FirstName</label>
                                    <input type="text" placeholder="" title="Please enter your first name" required="" value="" name="FirstName" id="FirstName" class="form-control">
                                    <span class="help-block small">@Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })Please enter your first name</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="LastName">LastName</label>
                                    <input type="text" placeholder="" title="Please enter your last name" required="" value="" name="LastName" id="LastName" class="form-control">
                                    <span class="help-block small">@Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })Please enter your last name</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="username">Email</label>
                                    <input type="text" placeholder="example@gmail.com" title="Please enter your email address" required="" value="" name="Email" id="username" class="form-control">
                                    <span class="help-block small">@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })Please enter your email address</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="password">Password</label>
                                    <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="Password" id="password" class="form-control">
                                    <span class="help-block small">@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })Please enter your password</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="confirmpassword">ConfirmPassword</label>
                                    <input type="password" title="Please repeat your password" placeholder="******" required="" value="" name="ConfirmPassword" id="confirmpassword" class="form-control">
                                    <span class="help-block small">@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })Please repeat your password</span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Profile Picture</label>
                                    <input name="image" type="file" class="form-control" />
                                    <span class="help-block small">Upload profile pic</span>
                                </div>
                            </div>
                            <div>
                                <input type="submit" class="btn btn-accent" value="Register" />
                                <!--<button class="btn btn-accent">Register</button>-->
                                <!--<a class="btn btn-default" href="login.html">Login</a>-->
                            </div>
                       }
                    </div>
                </div>
            </div>
        </section>
        <!-- End main content-->
